<body>
    @include('main/header')
    <div class="container">
        <div class="row">
            <div class="col m12">
                <div class="post-img">
                    <img
                        src="{{ url('post-img/' . $image) }}"
                        loading="lazy"
                        class="materialboxed"
                        data-caption="{{ $description }}"
                    />
                </div>
                <h4>{{ $title }}</h4>
                <span class="post-details">
                    <img src="{{ url('icons/clock.png') }}" width="24"/>
                    &nbsp;{{ $date }} 路 {{ $category }} 路 {{ $lang['lecture_time'] }} {{ $time }} {{ $lang['minutes_suffix'] }}
                </span>
                <div class="post-content">{! $html !}</div>
                <div id="disqus_thread"></div>
            </div>
        </div>
        <div class="row">
            <div class="col m12">
                <h4 class="text-center">{{ $lang['other_post'] }}</h4>
                <div class="row">
                    {% foreach ($others as $other): %}
                        <a class="col s12 m4 post-card sm" href="{{ url('post/' . $other['post_id']) }}">
                            <img src="{{ url('post-img/' . $other['image']) }}" style="width: 100%;"/>
                            <div>
                                <h5>{{ $other['title'] }}</h5>
                                <p>{{ $other['date'] }} 路 {{ $other['category'] }} 路 {{ $other['time'] }} {{ $lang['minutes_suffix'] }}</p>
                            </div>
                        </a>
                    {% endforeach %}
                </div>
            </div>
        </div>
    </div>
